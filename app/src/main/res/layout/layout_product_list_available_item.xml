<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/ld_margin_small"
    android:layout_marginTop="@dimen/ld_margin_small">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/clMainItem"
        app:layout_constraintStart_toStartOf="@id/clMainItem"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvHeaderTitle"
            style="@style/Device.ld.Widget.TextView.PrimaryColor.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingExtra="0dp"
            android:lines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Test ThermoState" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvHeaderSubTitle"
            style="@style/Device.ld.Widget.TextView.PrimaryColor.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ld_margin_extra_small"
            android:autoSizeTextType="uniform"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingExtra="0dp"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHeaderTitle"
            tools:text="Test ThermoState" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMainItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ld_margin_small"
        android:background="@color/ldWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clHeader">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/ld_margin_normal"
            android:layout_marginTop="@dimen/ld_margin_extra_small"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/shapeAppearance.App.CircleImageView.MediumComponent"
            app:strokeColor="@color/ldBlack"
            app:strokeWidth="2dp" />


        <androidx.constraintlayout.helper.widget.Flow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ld_margin_medium"
            android:layout_marginEnd="@dimen/ld_margin_small"
            android:orientation="vertical"
            app:constraint_referenced_ids="tvName, tvDescription, tvPrice, rbRating"
            app:flow_verticalGap="2dp"
            app:layout_constraintBottom_toBottomOf="@id/ivImage"
            app:layout_constraintEnd_toStartOf="@id/ivImageRight"
            app:layout_constraintStart_toEndOf="@id/ivImage"
            app:layout_constraintTop_toTopOf="@id/ivImage" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvName"
            style="@style/Device.ld.Widget.TextView.PrimaryColor.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ld_margin_medium"
            android:layout_marginEnd="@dimen/ld_margin_small"
            android:autoSizeTextType="uniform"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingExtra="0dp"
            android:lines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Test ThermoState" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDescription"
            style="@style/Device.ld.Widget.TextView.BlackColor.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ld_margin_medium"
            android:layout_marginEnd="@dimen/ld_margin_small"
            android:ellipsize="end"
            android:gravity="start"
            android:lineSpacingExtra="0dp"
            android:lines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="hello world" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPrice"
            style="@style/Device.ld.Widget.TextView.BlackColor.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ld_margin_medium"
            android:layout_marginEnd="@dimen/ld_margin_small"
            android:ellipsize="end"
            android:gravity="start"
            android:lineSpacingExtra="0dp"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="hello world" />

        <RatingBar
            android:id="@+id/rbRating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/tvDescription">

        </RatingBar>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivImageRight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/ld_margin_medium"
            android:layout_marginEnd="@dimen/ld_margin_medium"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@id/ivImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivImage"
            app:shapeAppearance="@style/shapeAppearance.App.CircleImageView.MediumComponent"
            app:strokeColor="@color/ldBlack"
            app:strokeWidth="2dp" />

        <View
            android:id="@+id/vLine"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/ld_margin_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/ivImage"
            app:layout_constraintTop_toBottomOf="@id/tvPrice" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/clMainItem"
        app:layout_constraintStart_toStartOf="@id/clMainItem"
        app:layout_constraintTop_toBottomOf="@id/clMainItem">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvFooter"
            style="@style/Device.ld.Widget.TextView.PrimaryColor.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ld_margin_small"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:padding="@dimen/ld_margin_large"
            android:text="@string/screen_home_device_listing_display_text_footer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

